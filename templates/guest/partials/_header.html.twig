{% if currentRoute == 'index' %}
<header id="header" class="home-page">
    <div class="header__logo">
        <a href="{{ path('index') }}"><img src="{{ asset('asset/image/craftlinkwhite.png') }}" alt="Logo CraftLink"></a>
    </div>
{% else %}
<header id="header" class="all-pages">
    <div class="header__logo">
        <a href="{{ path('index') }}"><img src="{{ asset('asset/image/craftlinkblue.png') }}" alt="Logo CraftLink"></a>
    </div>
{% endif %}

    {% if currentRoute == 'index' %}
        <nav>
            <ul class="nav__list">
                <li><a href="#sectionArticle1Home">Qui sommes nous ?</a></li>
                <li><a href="#sectionArticle2Home">Notre innovation</a></li>
                <li><a href="#sectionArticle3Home">Nos objectifs</a></li>
            </ul>
        </nav>
    {% endif %}


    <div class="header__auth">
        {% if app.user %}
            <h3>Bienvenue, {{ app.user.firstName }} {{ app.user.lastName }}</h3>

            {% if 'ROLE_ADMIN' in app.user.roles %}
                <a class="auth__user" href="{{ path('admin-homeboard') }}">Mon profil</a>
            {% elseif 'ROLE_CLIENT' in app.user.roles %}
                <a class="auth__user" href="{{ path('client-homeboard') }}">Mon profil</a>
            {% elseif 'ROLE_ARTISAN' in app.user.roles %}
                <a class="auth__user" href="{{ path('artisan-homeboard') }}">Mon profil</a>
            {% endif %}

            <a class="auth__user" href="{{ path('logout') }}">DÃ©connexion</a>
        {% else %}
            <div class="inscription">
                <h3>S'inscrire</h3>
                <a href="{{ path('register_client') }}">Particulier</a>
                <a href="{{ path('register_artisan') }}">Entreprise</a>
            </div>

            <div class="connexion">
                <h3>Se connecter</h3>
                <a href="{{ path('login') }}">Se connecter</a>
            </div>
        {% endif %}
    </div>
</header>
